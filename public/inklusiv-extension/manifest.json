{
  "manifest_version": 3,
  "name": "INKLUSIV",
  "version": "1.0.0",
  "description": "Accessibility-focused Chrome extension with voice input, gesture control, and real-time accessibility enhancements for inclusive web browsing.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "INKLUSIV Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-scripts/utilities.js",
        "content-scripts/accessibility.js",
        "content-scripts/voiceHandler.js",
        "content-scripts/gestureHandler.js",
        "content-scripts/widget.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content-scripts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
}
